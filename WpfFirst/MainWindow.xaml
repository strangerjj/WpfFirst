<Window x:Class="WpfFirst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="488.2" Width="525">
    <Grid>
        <StackPanel VerticalAlignment="Center" >
            <TextBlock Text="{Binding model.WPF}" Height="78" TextWrapping="WrapWithOverflow" RenderTransformOrigin="0.491,-1.346"/>
            <Button Command="{Binding CopyCmd}" Height="50" Width="232" Content="Copy"/>
            <Button Command="{Binding ClearCmd}" Height="50" Width="232" Content="Clear"/>
        </StackPanel>
        <DataGrid HorizontalAlignment="Left" Margin="63,39,0,0" VerticalAlignment="Top" Width="376" Height="81">
            <DataGrid.Columns>
                <DataGridTextColumn/>
                <DataGridTextColumn/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>